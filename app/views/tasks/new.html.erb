<div class="form-container">
  <%= form_for(@task) do |f| %>
  <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control col-lg-3" %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: "form-control col-lg-6" %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-default btn-primary" %>
    </div>
  <% end %>
</div>
