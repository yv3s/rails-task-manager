<h1> <%= @task.title.capitalize %> </h1>
<div class="details">
  <%= @task.details.capitalize %>
</div>

<% completed = @task.completed  %>
<% if completed == true %>
<p>This task is done ! Congrats</p>
<% else %>
<p>This task is not completed yet :(</p>
<% end %>

<div class="icons">
  <a href="/tasks/<%= @task.id %>/edit"><i class="far fa-edit"></i></a>
  <a data-confirm="Are you sure you want to delete your task '<%= @task.title %>' ?" data-method="delete" href="/tasks/<%= @task.id %>"><i class="far fa-trash-alt"></i></a>
  <a href="/tasks"><i class="fas fa-home"></i></a>
</div>
