<h1>My tasks</h1>


<% @tasks.each_with_index do |task, index| %>
<ul>
  <li>
    <% if task.completed == true %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to ("#{task.title.capitalize}"), (task_path(task)) %>
  </li>
</ul>
<% end %>
